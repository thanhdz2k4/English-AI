# Database Configuration
DB_USER=postgres
DB_PASSWORD=your-secure-password
DATABASE_URL=postgresql://postgres:your-secure-password@postgres.railway.internal:5432/railway

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-minimum-256-bits-change-in-production

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Service URLs (Railway will auto-generate these)
USER_SERVICE_URL=http://user-service:8082
WRITING_SERVICE_URL=http://writing-service:8081
AI_SERVICE_URL=http://ai-service:8083

# Frontend API URL
VITE_API_URL=https://your-gateway.railway.app

# Railway Environment
SPRING_PROFILES_ACTIVE=production
NODE_ENV=production
